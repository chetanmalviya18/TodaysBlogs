<style>
  body {
    background-color: #3f3e3e;
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }
  h2 {
    font-family: cursive;
    font-size: 30px;
    color: gray;
    text-align: center;
    margin-top: 90px;
  }
  .form-container {
    max-width: 500px;
    margin: 0 auto;
  }
  label {
    display: block;
    margin-bottom: 8px;
    color: aliceblue;
    font-family: cursive;
  }
  input {
    padding: 8px;
    margin-bottom: 16px;
    border: none;
    border-radius: 6px;
  }
  textarea {
    padding: 8px;
    margin-bottom: 16px;
    border: none;
    border-radius: 6px;
  }
  button {
    background-color: white;
    padding: 3px 6px;
    border: none;
    font-family: cursive;
    border-radius: 4px;
    cursor: pointer;
  }
  button:hover {
    background-color: gray;
    color: white;
    font-weight: bold;
  }
  input,
  textarea {
    width: 100%;
  }
  @media (max-width: 768px) {
    form {
      max-width: 768px;
    }
  }
</style>
<body>
  <div class="form-container">
    <h2>New Post</h2>
    <form action="/new_post" method="post" class="form">
      <label for="postTile">Title:</label>
      <input type="text" name="postTile" placeholder="Enter Title" required />

      <label for="postContent">Post:</label>
      <textarea
        name="postContent"
        rows="8"
        placeholder="Enter content"
        required
      ></textarea>

      <button type="submit">Publish</button>
    </form>
  </div>
</body>
