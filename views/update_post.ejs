<style>
  body {
    background-color: #3f3e3e;
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }
  .form-container {
    max-width: 500px;
    margin: 0 auto;
  }
  form {
    margin-top: 150px;
  }
  label {
    display: block;
    margin-bottom: 8px;
    color: aliceblue;
    font-family: cursive;
  }

  input,
  textarea {
    width: 100%;
  }
  button {
    background-color: white;
    padding: 3px 6px;
    border: none;
    font-family: cursive;
    border-radius: 4px;
    cursor: pointer;
  }
  button:hover {
    background-color: gray;
    color: white;
  }
  h2 {
    text-align: center;
    color: gray;
    font-family: cursive;
    font-size: 60px;
    margin-bottom: -100px;
    margin-top: 40px;
  }
  input {
    padding: 8px;
    margin-bottom: 16px;
    border: none;
    border-radius: 6px;
  }
  textarea {
    padding: 8px;
    margin-bottom: 16px;
    border: none;
    border-radius: 6px;
  }
  @media (max-width: 768px) {
    form {
      max-width: 768px;
    }
  }
</style>

<body>
  <div class="form-container">
    <h2>Edit Blog Post</h2>
    <form action="/update_post/<%= blog.id %>" method="post">
      <label for="postTitle">Title:</label>
      <input
        type="text"
        id="postTitle"
        name="postTitle"
        value="<%= blog.title %>"
        required
      />

      <label for="postContent">Content:</label>
      <textarea id="postContent" name="postContent" rows="8" required>
<%= blog.content %></textarea
      >

      <button type="submit">Update Post</button>
    </form>
  </div>
</body>
